<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Heading Text -->
    <TextView
        android:id="@+id/page_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Gynecologist"
        android:textColor="#4CAF50"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Layout for Dr. Sanjana Kapoor -->
    <LinearLayout
        android:id="@+id/doctor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_background"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/page_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView_sanjana"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/male_gyno" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/doctor_name_sanjana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Shrikant Aware"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctor_specialization_sanjana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultant-Cosmetic Gynecology"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/doctor_qualifications_sanjana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MBBS, DGO, Cosmetic Gynecologist"
                android:textColor="#333333"
                android:textSize="12sp" />

            <Button
                android:id="@+id/book_appointment_button_sanjana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#4CAF50"
                android:elevation="2dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="Book Appointment"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
